{
  "name": "trading-exchange-backend",
  "version": "1.0.0",
  "description": "Scalable trading exchange backend with order matching, WebSocket streaming, and real-time analytics",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:unit": "npm test -- --testPathPattern=tests/unit",
    "test:integration": "npm test -- --testPathPattern=tests/integration",
    "load-test": "node load-test/load-test.js",
    "fixtures": "node fixtures/gen_orders.js"
  },
  "keywords": ["trading", "exchange", "orderbook", "matching-engine", "websocket"],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "redis": "^4.6.13",
    "ws": "^8.17.1",
    "uuid": "^9.0.1",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  }
}
